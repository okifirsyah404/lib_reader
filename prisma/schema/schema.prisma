generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          String   @id @default(cuid())
  title       String
  language    String
  genres      String[]
  isbn        String
  published   DateTime
  publisher   String
  pages       Int
  description String?  @db.Text
  coverUrl    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String?

  authors Author? @relation(fields: [authorId], references: [id])
}

model Author {
  id       String   @id @default(cuid())
  name     String
  birthday DateTime
  country  String
  bio      String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  books Book[]
}
